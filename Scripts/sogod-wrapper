# Uncomment the following line for Oracle RAC. This is where
# should be located the tnsnames.ora.
#export TNS_ADMIN=/home/sogo

if [ -z "$1" ]
then
  PIDFILE=/var/run/sogo/sogod.pid
else
  PIDFILE=/var/run/sogo/sogod.$1
fi

if [ -f /etc/GNUstep/GNUstep.conf ]; then
    . /etc/GNUstep/GNUstep.conf
else
    echo "Can't find GNUstep.conf"
    exit 1
fi

if [ -x $HOME/$GNUSTEP_USER_DIR_ADMIN_TOOLS/sogod ]; then
    sogod="$HOME/$GNUSTEP_USER_DIR_ADMIN_TOOLS/sogod"
elif [ -x $GNUSTEP_LOCAL_ADMIN_TOOLS/sogod ]; then
    sogod="$GNUSTEP_LOCAL_ADMIN_TOOLS/sogod"
elif [ -x $GNUSTEP_SYSTEM_ADMIN_TOOLS/sogod ]; then
    sogod="$GNUSTEP_SYSTEM_ADMIN_TOOLS/sogod"
else
    echo "Can't find sogod"
    exit 1
fi
echo $sogod

if [ -f $GNUSTEP_MAKEFILES/GNUstep.sh ]; then
    . $GNUSTEP_MAKEFILES/GNUstep.sh
else
    echo "Can't find GNUstep.sh"
    exit 1
fi

woport=`defaults read sogod WOPort`
if [ "$?" == "0" ]
then
  startport=`echo $woport | awk '{print $3}' | sed -e 's/\(.*:\)//'`
else
  startport=20000
fi

if [ -z "$1" ]
then
  port=$startport
else
  let "port=$startport + $1 - 1"
fi
listen=`echo $woport | awk '{ print $3 }' | sed -e 's/\([0-9]\+\)$/'$port'/g'`

# echo "SOGOD: $sogod -WOPort $listen" 2>&1

exec $sogod -WOPort $listen >> /var/log/sogo/sogod-$port.log 2>&1 &
echo $! > $PIDFILE
